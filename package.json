{
  "name": "ai-image-gen",
  "version": "1.0.0",
  "description": "AI-powered image generator CLI for creating custom-sized images using OpenAI DALL-E",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "ai-image-gen": "bin/cli.js"
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsx src/index.ts",
    "typecheck": "tsc --noEmit",
    "cli": "node bin/cli.js",
    "prepublishOnly": "npm run build && npm run typecheck"
  },
  "keywords": [
    "ai",
    "image",
    "generator",
    "dalle",
    "openai",
    "cli",
    "dall-e-3",
    "image-generation",
    "typescript"
  ],
  "author": "tmgbabul",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/babul/ai-image-gen.git"
  },
  "homepage": "https://github.com/babul/ai-image-gen#readme",
  "bugs": {
    "url": "https://github.com/babul/ai-image-gen/issues"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "dist/",
    "bin/",
    "README.md",
    "LICENSE"
  ],
  "dependencies": {
    "chalk": "^5.6.2",
    "commander": "^14.0.2",
    "dotenv": "^17.2.3",
    "openai": "^6.17.0",
    "ora": "^9.1.0",
    "sharp": "^0.34.5"
  },
  "devDependencies": {
    "@types/node": "^25.1.0",
    "tsup": "^8.5.1",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  }
}
